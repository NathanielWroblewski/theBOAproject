<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<h1>Profile</h1>
<ul>
  <li>
    <p>Username: </p>
    <p><%= @user.username %></p>
  </li>
  <li>
    <p>First Name: </p>
    <p><%= @user.first_name %></p>
  </li>
  <li>
    <p>Last Name: </p>
    <p><%= @user.last_name %></p>
  </li>
  <li>
    <p>Rank: </p>
    <p><%= @user.rank %></p>
  </li>
  <li>
    <p>Gym: </p>
    <p><%= @user.gym %></p>
  </li>
  <li>
    <p>About: </p>
    <p><%= @user.about %></p>
  </li>
</ul>

<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(current_user) %>
<% end %>
