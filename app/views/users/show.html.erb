<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<h1>Profile</h1>
<ul>
  <li><%= @user.username %></li>
  <li><%= @user.first_name %></li>
  <li><%= @user.last_name %></li>
  <li><%= @user.rank %></li>
  <li><%= @user.gym %></li>
  <li><%= @user.about %></li>
</ul>

<% if @user == current_user %>
  <%= link_to 'Edit', edit_user_path(current_user) %>
<% end %>
