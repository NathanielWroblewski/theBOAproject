<!DOCTYPE html>
<html>
<head>
  <title>ProjectBOA</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
    <nav>
      <ul>
        <li>
          <%= link_to 'Profile', current_user %>
        </li>
        <li>
          <%= link_to 'Home', positions_path %>
        </li>
        <li>
          <%= link_to 'Upload', instructional_videos_path %>
          </li>
        <li>
          <%= link_to 'Log out', logout_path %>
        </li>
      </ul>
    </nav>
  <% end %>

<%= yield %>

</body>
</html>
